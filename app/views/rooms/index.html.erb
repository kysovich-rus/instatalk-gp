<p id="notice"><%= notice %></p>

<div class="container row">
  <div class="col-6">
    <h2 class="display-3">Rooms</h2>
    <ul class="mt-4 list-unstyled">
      <%= render @rooms %>
    </ul>
  </div>
  <div class="col-6">
    <h2 class="display-3">Online</h2>
    <div id="users_online" class="text-success">
      <% @users_online.each do |user| %>
        <div id="<%= user.id %>">
          <i class="bi bi-person-fill"></i><%= user.nickname %>
        </div>
      <% end %>
    </div>
  </div>

</div>
<div class="mt-2">
  <%= render 'rooms/form', room: @room %>
</div>
